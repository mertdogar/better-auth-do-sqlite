{
  "name": "@mertdogar/better-auth-do-sqlite",
  "libName": "better-auth-do-sqlite",
  "version": "0.0.6",
  "description": "Complete authentication and database solution for Cloudflare Durable Objects with Better Auth and libSQL HTTP protocol support",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "type": "module",
  "scripts": {
    "lint": "eslint . && tsc --noEmit",
    "format": "eslint . --fix",
    "build-types": "node --import tsx ./tools/fix-dts.mts",
    "build-common": "tsup lib/index.ts --format cjs,esm --clean --treeshake --dts",
    "build-all": "tsup lib/index.ts --format cjs,esm --treeshake --dts --onSuccess \"npm run build-types\"",
    "build": "npm run build-common -- --onSuccess \"npm run build-types\"",
    "dev": "npm run build-common -- --sourcemap --watch --onSuccess \"npm run build-types\"",
    "dev-all": "npm run build-all -- --watch",
    "prepublishOnly": "npm run build-all",
    "update-jsr-version": "node --import tsx ./tools/update-jsr-version.mts",
    "publish-package": "changeset publish",
    "publish-package-jsr": "npm run update-jsr-version && npx jsr publish --allow-dirty",
    "check-jsr": "npx jsr publish --allow-dirty --dry-run",
    "change": "changeset",
    "test": "vitest",
    "test-coverage": "vitest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mertdogar/better-auth-do-sqlite.git"
  },
  "keywords": [
    "better-auth",
    "cloudflare",
    "durable-objects",
    "authentication",
    "sqlite",
    "libsql",
    "adapter",
    "session-management",
    "edge",
    "workers",
    "decorator",
    "typescript",
    "database"
  ],
  "author": {
    "name": "mertdogar",
    "url": "https://github.com/mertdogar"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/mertdogar/better-auth-do-sqlite/issues"
  },
  "homepage": "https://github.com/mertdogar/better-auth-do-sqlite",
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.1",
    "@testing-library/dom": "^10.4.0",
    "@types/node": "^22.15.3",
    "@types/tx2": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@typescript-eslint/utils": "^8.31.1",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^15.15.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.0",
    "tslib": "^2.8.1",
    "tsup": "^8.4.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.46.0",
    "vitest": "^3.1.2"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.cjs",
    "dist/**/*.mjs",
    "dist/**/*.d.ts",
    "dist/**/*.d.cts",
    "README.md",
    "CHANGELOG.md",
    "LICENSE.txt"
  ],
  "dependencies": {
    "@cloudflare/workers-types": "4.20251004.0",
    "better-auth": "1.3.26",
    "hono": "4.9.10"
  }
}
